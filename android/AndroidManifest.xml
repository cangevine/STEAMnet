<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.friendscentral.steamnet"
    android:icon="@drawable/steamnet_octupus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:name="org.friendscentral.steamnet.STEAMnetApplication"
        android:icon="@drawable/steamnet_octopus_small"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true" >
        <activity
            android:name="org.friendscentral.steamnet.Activities.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.friendscentral.steamnet.Activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="org.friendscentral.steamnet.Activities.SparkDetailActivity"
            android:label="Spark Detail"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="org.friendscentral.steamnet.Activities.IdeaDetailActivity"
            android:label="Idea Detail"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="org.friendscentral.steamnet.Activities.AuthActivity"
            android:label="Log In"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>